{
  "ignorePatterns": [
    {
      "pattern": "^http://localhost"
    },
    {
      "pattern": "^https://127.0.0.1"
    },
    {
      "pattern": "^mailto:"
    },
    {
      "pattern": "^file://"
    },
    {
      "pattern": "https://warp.cc"
    },
    {
      "pattern": "https://sonar.warp.cc"
    },
    {
      "pattern": "https://academy.warp.cc"
    }
  ],
  "replacementPatterns": [
    {
      "pattern": "^/",
      "replacement": "{{BASEURL}}/"
    }
  ],
  "timeout": "10s",
  "retryOn429": true,
  "retryCount": 3,
  "fallbackRetryDelay": "5s",
  "aliveStatusCodes": [200, 206, 429],
  "httpHeaders": [
    {
      "urls": ["https://github.com", "https://gql-guide.arweave.dev", "https://docs.arweave.org"],
      "headers": {
        "User-Agent": "Mozilla/5.0 (compatible; link-checker)"
      }
    }
  ]
}